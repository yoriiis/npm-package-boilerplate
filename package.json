{
	"name": "npm-package-boilerplate",
	"version": "1.0.0",
	"description": "Boilerplate to kickstart creating a npm package",
	"homepage": "https://github.com/yoriiis/npm-package-boilerplate",
	"bugs": "https://github.com/yoriiis/npm-package-boilerplate/issues",
	"repository": "https://github.com/yoriiis/npm-package-boilerplate.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"files": [],
	"main": "src/index.js",
	"scripts": {
		"build:tsc": "tsc",
		"build:types": "tsc --emitDeclarationOnly",
		"coverage": "npm run test:coverage && cat ./coverage/lcov.info | coveralls",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:eslint": "eslint . --ignore-pattern lib",
		"test:markdown": "markdownlint '**/*.md' --ignore node_modules",
		"test:type-check": "tsc --noEmit",
		"test:watch": "jest --watchAll --coverage",
		"type-check:watch": "npm run type-check -- --watch"
	},
	"babel": {
		"plugins": [
			"babel-plugin-dynamic-import-node"
		],
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8.11.2"
					}
				}
			],
			[
				"@babel/typescript"
			]
		]
	},
	"browserslist": [
		"last 2 version"
	],
	"prettier": {
		"printWidth": 100,
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"proseWrap": "preserve",
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"jest": true,
			"node": true
		},
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaFeatures": {
				"impliedStrict": true,
				"experimentalObjectRestSpread": true
			},
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"extends": "standard",
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"ignoredNodes": [
						"TemplateLiteral > *"
					]
				}
			],
			"no-console": 0,
			"no-tabs": 0,
			"semi": [
				1,
				"always"
			]
		},
		"globals": {
			"document": false,
			"window": false
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"modulePaths": [
			"./src"
		],
		"preset": "ts-jest/presets/js-with-babel",
		"resetModules": true,
		"verbose": true
	},
	"devDependencies": {
		"@babel/preset-env": "^7.9.5",
		"@babel/preset-typescript": "^7.9.0",
		"babel-eslint": "^10.1.0",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"coveralls": "^3.0.13",
		"eslint": "^6.8.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"jest": "^29.5.0",
		"markdownlint-cli": "^0.22.0",
		"prettier-eslint": "^9.0.1",
		"ts-jest": "^25.4.0",
		"typescript": "^3.8.3"
	},
	"engines": {
		"node": ">=8.11.2"
	}
}
